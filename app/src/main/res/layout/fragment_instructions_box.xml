<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundPeach"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/colorBackgroundPeach">

        <ImageButton
            android:id="@+id/instructions_text_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            android:background="@color/colorBackgroundPeach"
            android:src="@drawable/back11" />

        <TextView
            android:id="@+id/instructions_text_view"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="testestestesteestestestestesrestestedvhfjnvkdv\nuidfjgore/nhbrnfvduigkrebginjkfgbknvuirengjkdfnvrigbk"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/instructions_text_next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:src="@drawable/next11"
            android:layout_gravity="center"
            android:layout_margin="20sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/instructions_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textIsSelectable="false"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
</LinearLayout>