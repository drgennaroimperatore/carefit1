<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disclaimer:"
        android:textSize="25sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:padding="4sp"
        android:textStyle="bold"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It is reccomended that you try a"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/greenbg"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exercise to warm up before trying a "
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <ImageView
            android:textAlignment="center"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/orangebg"
            android:scaleType="centerInside"
            android:layout_weight="1"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or High"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <ImageView
            android:textAlignment="center"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/redbg"
            android:scaleType="centerInside"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level exercise"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The amount of physical activity you can do per week depends on your health. For futher advice, talk to your GP."
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you feel pain in your joints or become dizzy while exercising, stop and get medical advice."
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you feel any chest pain or unexpected shortness of breath when you are exercising, stop and seek medical advice immediately by calling 999."
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/disclaimer_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Okay"/>

</LinearLayout>