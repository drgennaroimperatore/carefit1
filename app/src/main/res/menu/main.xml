    <item
        android:id="@+id/overflow"
        android:icon="@drawable/brgr"
        android:title="@+id/Menu"
        app:showAsAction="ifRoom">

        <menu
            android:id="@+id/main_menu">

            <!-- "Change Preferences", should always appear in the overflow -->
            <item
                android:id="@+id/action_help"
                android:title="Help"
                app:showAsAction="always" />

            <!--"Set Reminders", should appear as action button if possible -->
            <item
                android:id="@+id/action_reminders"
                android:title="@string/reminders_btn"
                app:showAsAction="always" />

            <!--"Filter Exercises", should appear as action button if possible-->
